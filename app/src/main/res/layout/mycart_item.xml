<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
	android:background="@color/app_back">
<android.support.v7.widget.CardView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/margin_3"
	android:background="@color/white">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="@dimen/margin_10">
		<ImageView
			android:id="@+id/cartimage"
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:layout_gravity="center_vertical"
			android:layout_weight=".7"
			android:layout_margin="@dimen/margin_10"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight=".35"
			android:layout_marginLeft="@dimen/margin_7">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right|center">
				<ImageView
					android:id="@+id/delete"
					android:layout_width="@dimen/margin_25"
					android:layout_height="@dimen/margin_25"
					android:background="@mipmap/close_icon"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
			<TextView
				android:id="@+id/cartprod_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Dips &amp; Sprides "
				android:maxLines="2"
				android:ellipsize="end"
				android:textColor="@color/text_light_black_color"/>
				<TextView
					android:id="@+id/cartprod_desc"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Dips &amp; Sprides "
					android:maxLines="2"
					android:ellipsize="end"
					android:layout_marginTop="@dimen/margin_3"
					android:textColor="@color/text_light_black_color"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="@dimen/margin_20"
					android:gravity="center_vertical">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight=".5">
						<TextView
							android:id="@+id/cartamount"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:text="R 500"/>
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight=".5"
						android:layout_marginRight="@dimen/text_10"
						android:orientation="vertical">

						<LinearLayout
							android:id="@+id/plusminuslayout"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="@dimen/margin_5"
							android:layout_marginRight="@dimen/margin_5"
							android:gravity="center"
							android:orientation="horizontal"
							android:visibility="visible">

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight=".33"
								android:gravity="center">

								<ImageView
									android:id="@+id/plus"
									android:layout_width="@dimen/margin_25"
									android:layout_height="@dimen/margin_25"
									android:background="@mipmap/plus_icon"/>
							</LinearLayout>

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight=".28"
								android:gravity="center">

								<TextView
									android:id="@+id/counttext"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text=""
									android:textColor="@color/colorPrimary"
									android:textSize="@dimen/text_18"/>
							</LinearLayout>

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight=".33"
								android:gravity="center">

								<ImageView
									android:id="@+id/minus"
									android:layout_width="@dimen/margin_25"
									android:layout_height="@dimen/margin_25"
									android:background="@mipmap/minus_icon"/>
							</LinearLayout>

						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>