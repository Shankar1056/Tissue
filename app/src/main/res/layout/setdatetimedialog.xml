<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:id="@+id/pickdatetime"
				android:layout_width="match_parent"
				android:layout_height="@dimen/margin_50"
				android:text="@string/pickdateandtime"
				android:gravity="center"
				android:textColor="@color/colorPrimary"
				android:textSize="@dimen/text_16"
				android:textStyle="normal"/>
			<View
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginTop="@dimen/margin_5"
				android:background="@color/colorAccent"/>
			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="170dp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_margin="@dimen/margin_5">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginRight="@dimen/margin_5">
							<TextView
								android:id="@+id/firstday"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>

						</LinearLayout>
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginLeft="@dimen/margin_5">
							<TextView
								android:id="@+id/firsttime"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="@dimen/margin_5">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginRight="@dimen/margin_5">
							<TextView
								android:id="@+id/secondday"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>

						</LinearLayout>
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginLeft="@dimen/margin_5">
							<TextView
								android:id="@+id/secondtime"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="@dimen/margin_5">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginRight="@dimen/margin_5">
							<TextView
								android:id="@+id/thirdday"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>

						</LinearLayout>
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginLeft="@dimen/margin_5">
							<TextView
								android:id="@+id/thirdtime"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="@dimen/margin_5">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginRight="@dimen/margin_5">
							<TextView
								android:id="@+id/fourthday"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>

						</LinearLayout>
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginLeft="@dimen/margin_5">
							<TextView
								android:id="@+id/fourthtime"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="@dimen/margin_5">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginRight="@dimen/margin_5">
							<TextView
								android:id="@+id/fifthday"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>

						</LinearLayout>
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight=".5"
							android:layout_marginLeft="@dimen/margin_5">
							<TextView
								android:id="@+id/fifthtime"
								android:layout_width="match_parent"
								android:layout_height="@dimen/margin_50"
								android:textColor="@color/text_light_black_color"
								android:textSize="@dimen/text_14"
								android:textStyle="normal"
								android:text=""
								android:gravity="center"/>
							<View
								android:layout_width="match_parent"
								android:layout_height="0.5dp"
								android:layout_marginTop="@dimen/margin_3"
								android:background="@color/colorAccent"/>
						</LinearLayout>
					</LinearLayout>

				</LinearLayout>
			</ScrollView>
			<View
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginTop="@dimen/margin_3"
				android:background="@color/colorAccent"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/margin_50"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/cancel"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:textColor="@color/text_light_black_color"
					android:textSize="@dimen/text_14"
					android:textStyle="normal"
					android:text="Cancel"
					android:layout_weight=".5"
					android:layout_marginRight="@dimen/margin_5"
					android:gravity="center"/>

				<TextView
					android:id="@+id/done"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:textColor="@color/text_light_black_color"
					android:textSize="@dimen/text_14"
					android:textStyle="normal"
					android:text="Done"
					android:layout_weight=".5"
					android:layout_marginLeft="@dimen/margin_5"
					android:gravity="center"/>
			</LinearLayout>
		</LinearLayout>
	</android.support.v7.widget.CardView>

</LinearLayout>