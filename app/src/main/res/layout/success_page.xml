<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/thankyou"
	android:gravity="center"
	android:layout_margin="@dimen/margin_20">
		<ImageView
			android:layout_width="@dimen/margin_100"
			android:layout_height="@dimen/margin_100"
			android:background="@mipmap/order_place_icon"/>
	<TextView
		android:id="@+id/orderplaced"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Order Placed"
		android:textColor="@color/successpagetextcolor"
		android:layout_marginTop="@dimen/text_30"
		android:textSize="@dimen/text_16"/>
	<TextView
		android:id="@+id/successfully"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_15"
		android:textSize="@dimen/margin_15"
		android:background="@color/colorAccent"
		android:paddingLeft="@dimen/margin_20"
		android:paddingRight="@dimen/margin_20"
		android:text="Successfully"
		android:paddingBottom="@dimen/margin_5"
		android:paddingTop="@dimen/margin_5"
		android:textColor="@color/white"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="@dimen/margin_30">
		<TextView
			android:id="@+id/total"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight=".5"
			android:textColor="@color/colorAccent"
			android:gravity="center"
			android:text="Total"
			android:textSize="@dimen/margin_15"/>
		<TextView
			android:id="@+id/amount"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight=".5"
			android:textColor="@color/colorAccent"
			android:gravity="center"
			android:text="R 190"
			android:textSize="@dimen/margin_15"/>
	</LinearLayout>

	<TextView
		android:id="@+id/thankyoutext"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/margin_18"
		android:text="THANK YOU"
		android:textColor="@color/successpagetextcolor"
		android:layout_marginTop="@dimen/margin_40"/>
<RelativeLayout
	android:layout_width="wrap_content"
	android:layout_height="300dp"
	android:visibility="gone"
	android:background="@mipmap/success_board_with_hands"
	android:layout_alignParentBottom="true"
	android:layout_alignParentStart="true">
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/colorAccent"
		android:textSize="@dimen/text_16"
		android:textStyle="normal"
		android:gravity="center"
		android:text="@string/successorder"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:layout_marginTop="42dp"
		android:id="@+id/textView3"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="order id : 12345"
		android:layout_below="@+id/textView3"
		android:layout_alignParentStart="true"
		android:gravity="center"
		android:textColor="#008E0C"
		android:layout_marginTop="10dp"
		android:id="@+id/orderid"/>
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:text="@string/thankyou"
		android:background="@color/colorPrimary"
		android:paddingLeft="@dimen/margin_20"
		android:paddingRight="@dimen/margin_20"
		android:textColor="@color/white"
		android:textStyle="normal"
		android:textSize="@dimen/text_18"
		android:layout_marginBottom="130dp"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="#008E0C"
		android:textSize="@dimen/text_16"
		android:textStyle="normal"
		android:text="Go Vagan, It's delicious"
		android:layout_alignParentBottom="true"
		android:layout_alignParentStart="true"
		android:layout_marginBottom="100dp"
		android:gravity="center"/>
	</RelativeLayout>
</LinearLayout>